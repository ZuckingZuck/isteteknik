extends ./layouts/main-layout.pug 


block content

    if (action !== 'undefined' && action === 'aktarildi')
        div.alert.alert-success.mt-3 Film İzlenenlere Aktarıldı.

    if (action !== 'undefined' && action === 'edit')
        div.alert.alert-success Paylaşımın Güncellendi.

    form(action="/filmekle" method='POST').mt-3.bg-dark.p-2.rounded.shadow
        div.form-group
            label.text-light.mx-auto
                strong Film Ekle
            input(type="text" id="filmadi" name="filmadi" placeholder="Film Adı").form-control
            button(type="submit").btn.btn-primary.mt-2 Kaydet
    form
    
    if filmler.length > 0
        table.table.table-bordered.table-dark.table-hover.mt-3.shadow
            thead
                tr
                    th Film Adı
                    th(style="width: 150px;") Eylem
                    th(style="width: 70px;") Sil
            tbody
                each film in filmler
                    tr
                        td.text-capitalize !{film.film}
                        td
                            form(action="/aktar" method='POST')
                                input(type='hidden' name="filmadi" value=`${film.film}`)
                                input(type='hidden' name="filmid" value=`${film._id}`)
                                input(type='submit' value="Aktar").btn.btn-danger.btn-sm
                        td
                            form(action="/izlenecekfilmsil" method='POST')
                                input(type='hidden' name="filmid" value=`${film._id}`)
                                input(type='submit' value="Sil").btn.btn-danger.btn-sm

                           
                            
    else
        h1 Henüz Paylaşımda Bulunmamışsın.