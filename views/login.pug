extends ../views/layouts/main-layout.pug 
block styles
    link(rel="stylesheet" href="/css/forms.css")
block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 #{errorMessage}
    .row
            div.bg-dark.text-light.p-3.rounded.col-md-6.mx-auto.mt-3
                form(action="/login" method="POST")
                    div.form-group.row
                        label(for="name").col-sm-2.col-form-label Kullanıcı Adı
                        div.col-sm-9.pr-0
                            input(type="text" name="name").form-control#email

                    div.form-group.row
                        label(for="password").col-sm-2.col-form-label Şifre
                        div.col-sm-9.pr-0
                            input(type="password" name="password").form-control#password

                    div.form-group.row
                        div.col-sm-5.offset-sm-2.pr-0
                            input(type="submit" value="Giriş Yap").btn.btn-success