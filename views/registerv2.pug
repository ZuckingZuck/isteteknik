extends ./layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet")
    script(src="https://kit.fontawesome.com/a81368914c.js")
block content
    .row
        .col-md-12
            img.wave(src='img/wave.svg')
            .container
                .img
                    a(href="/")
                        img(src='img/iste.png')
                .login-content
                    form(action="/register" method="POST")
                        img.avatarImg(src='img/avatar.png')
                        h2.title Kayıt Ol
                        .input-div.one
                            .i
                                i.fas.fa-user
                            .div
                                input(type="text" name="name" placeholder="Kullanıcı Adı").form-control#email

                        
                        .input-div.pass
                            .i
                                i.fas.fa-lock
                            .div
                                input(type="password" name="password" placeholder="Şifre").form-control#password
                        a(href='/login') Zaten hesabın var mı? Giriş Yap
                        input.btn(type='submit' value='Kayıt Ol')

        