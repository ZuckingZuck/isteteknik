extends ./layouts/main-layout.pug 


block content
    div(style=`background-image: url(https://www.themoviedb.org/t/p/w600_and_h900_bestv2${filmDetails.data.poster_path});`).shadow.rounded.p-2.mt-3.bgposition
        h4 Film Bilgileri
        div.d-flex
            div.shadow.rounded
                img(src=`https://www.themoviedb.org/t/p/w600_and_h900_bestv2${filmDetails.data.poster_path}`, alt="", width=300).rounded
            div.ml-1
                div.shadow.p-2.transbgcolor.text-light.rounded Film Adı: #{film.film}
                div.shadow.p-2.mt-2.transbgcolor.text-light.rounded Film Puanı: #{film.puan}
                div.shadow.p-2.mt-2.transbgcolor.text-light.rounded Genel Bakış: #{filmDetails.data.overview}

    if quizes
        div.bg-dark.shadow.rounded.p-2.mt-3
            h4.text-light Yorumlar
            each quiz in quizes
                div.bg-dark.shadow.p-2.text-light #{quiz.content}
                div.bg-dark.shadow.p-2.text-light #{quiz.author}